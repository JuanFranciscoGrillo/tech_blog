{{!-- Extend the main layout --}}
{{#extend "main"}}

{{#content "body"}}
    <h1>Welcome to the Tech Blog</h1>
    <section>
        {{#each posts}}
            <article>
                <h2>{{this.title}}</h2>
                <p>{{this.content}}</p>
                <p>Posted by {{this.User.username}} on {{this.createdAt}}</p>
                <!-- Link to view full post details -->
            </article>
        {{else}}
            <p>No posts available.</p>
        {{/each}}
    </section>
{{/content}}

{{/extend}}
